#!/bin/bash

if [ -e tmp ]; then
	echo "Removing the existing build directory."
	rm -r tmp
fi

if [ "$1" == "--debug" ]; then
	echo "Preparing for a compilation in DEBUG mode." 
	echo
	cmake -DCMAKE_BUILD_TYPE=Debug   -DCMAKE_Fortran_COMPILER=/usr/bin/gfortran-5 -DCMAKE_AR:PATH=/usr/bin/gcc-ar-5 -DCMAKE_RANLIB:PATH=/usr/bin/gcc-ranlib-5 -H. -Btmp
elif [ "$1" == "--windows" ]; then
	echo "Preparing for a compilation in WINDOWS mode."
	echo
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_Fortran_COMPILER=/usr/bin/x86_64-w64-mingw32-gfortran -DCMAKE_AR:PATH=/usr/bin/x86_64-w64-mingw32-gcc-ar -DCMAKE_RANLIB:PATH=x86_64-w64-mingw32-ranlib -DCMAKE_SYSTEM_NAME=Windows -H. -Btmp
else
	echo "Preparing for a compilation in RELEASE mode."
	echo
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_Fortran_COMPILER=/usr/bin/gfortran-5 -DCMAKE_AR:PATH=/usr/bin/gcc-ar-5 -DCMAKE_RANLIB:PATH=/usr/bin/gcc-ranlib-5 -H. -Btmp
fi

echo
echo "Make has been initialized for compilation in the subdirectory 'tmp'."
echo "You can now type 'cd tmp' followed by 'make' to compile the project."
