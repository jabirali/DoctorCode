#!/bin/sh

args="${#}"
if [ "$args" -lt 4 ]; then
    echo "Usage:"
    echo "   $(basename ${0}) <MAX> <PROGRAM> <CONFIG> <PARAMETERS>"
    echo
    echo "For each set of parameters, this script will:"
    echo " o Create a subdirectory for each set of PARAMETERS;"
    echo " o Link the provided CONFIG file into that subdirectory;"
    echo " o Launch the PROGRAM there with the appropriate parameters;"
    echo " o Make sure that no more than MAX processes run at a time."
    echo 
    echo "Examples:"
    echo "   launch 4 equilibrium materials.conf 1:10"
    echo "   launch 8 temperature /home/$LOGNAME/test.conf 0:2:10 0.00,0.10,1.00"
    exit 0
else
  echo "TODO"
fi
